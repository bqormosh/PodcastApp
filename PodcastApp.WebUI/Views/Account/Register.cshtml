@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        margin: 0;
        padding: 0;
    }

    .footer {
        margin-top: 20px;
        position: relative;
    }

    #regiser .container #regiser-row #regiser-column #regiser-box {
        margin-top: 20px;
        margin-bottom: 20px;
        max-width: 600px;
        min-height: 320px;
        border: 1px solid #9C9C9C;
        background-color: #EAEAEA;
    }

        #regiser .container #regiser-row #regiser-column #regiser-box #regiser-form {
            padding: 20px;
        }

            #regiser .container #regiser-row #regiser-column #regiser-box #regiser-form #regiser-link {
                margin-top: -85px;
            }
</style>
<div id="regiser">
    <div class="container">
        <div id="regiser-row" class="row justify-content-center align-items-center">
            <div id="regiser-column" class="col-md-6">
                <div id="regiser-box" class="col-md-12">
                    <form id="regiser-form" class="form" action="@Url.Action("Register", "Account", new { area = "" })" method="post">
                        @Html.AntiForgeryToken()
                        <h3 class="text-center text-info">Regiser</h3>
                        <div class="text-danger">
                            @Html.ValidationSummary(false)
                        </div>
                        <div class="form-group">
                            <label for="firstname" class="text-info">First Name:</label><br>
                            <input type="text" id="firstname" class="form-control" asp-for="FirstName">
                            <div class="invalid-feedback">First name can not be empty</div>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="form-group">
                            <label for="lastname" class="text-info">Last Name:</label><br>
                            <input type="text" id="lastname" class="form-control" asp-for="LastName">
                            <div class="invalid-feedback">Last name can not be empty</div>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="form-group">
                            <label for="email" class="text-info">Email:</label><br>
                            <input type="email" id="email" class="form-control" asp-for="Email">
                            <div class="invalid-feedback">Please enter a valid email address</div>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-info">Password:</label><br>
                            <input type="password" id="password" class="form-control" asp-for="Password">
                            <div class="invalid-feedback">Password must be at least 8 characters and contians 1 capital letter, 1 small letter, 1 special character and 1 digit</div>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="form-group">
                            <label for="confirm-password" class="text-info">Confirm Password:</label><br>
                            <input type="password" id="confirm-password" class="form-control" asp-for="ConfirmPassowrd">
                            <div class="invalid-feedback">Confirmed password does not match the password</div>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="submit" name="submit" class="btn btn-info btn-md" value="submit">
                                </div>
                                <div class="col-md-6" style="text-align:right;">
                                    <a href="@Url.Action("Login", "Account", new { area = "" })" class="text-info">Login here!</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>

        $(document).on("keyup", "#password", function () {
            var input_pass = $("#password").val();
            if (!isPasswordValid(input_pass)) {
                $("#password").addClass('is-invalid');
                $("#password").removeClass('is-valid');
            } else {
                $("#password").addClass('is-valid');
                $("#password").removeClass('is-invalid');
            }
        });

        $(document).on("keyup", "#confirm-password", function () {
            var input_pass = $("#password").val();
            var confirm_pass = $("#confirm-password").val();
            if (!isPassowrdConfirmMatch(input_pass, confirm_pass)) {
                $("#confirm-password").addClass('is-invalid');
                $("#confirm-password").removeClass('is-valid');
            } else {
                $("#confirm-password").addClass('is-valid');
                $("#confirm-password").removeClass('is-invalid');
            }
        });



        $(document).on("keyup", "#email", function () {

            var email = $("#email").val();
            if (!isEmailvalid(email)) {
                $("#email").addClass('is-invalid');
                $("#email").removeClass('is-valid');
            } else {
                $("#email").addClass('is-valid');
                $("#email").removeClass('is-invalid');
            }
        });


        $('#regiser-form').submit(function () {
            //
            var firstname = $("#firstname").val();
            if (firstname.trim() === "") {
                $("#firstname").addClass('is-invalid');
                $("#firstname").removeClass('is-valid');
                return false;
            } else {
                $("#firstname").addClass('is-valid');
                $("#firstname").removeClass('is-invalid');
            }
            //
            var lastname = $("#lastname").val();
            if (lastname.trim() === "") {
                $("#lastname").addClass('is-invalid');
                $("#lastname").removeClass('is-valid');
                return false;
            } else {
                $("#lastname").addClass('is-valid');
                $("#lastname").removeClass('is-invalid');
            }
            //
            //
            var email = $("#email").val();
            if (!isEmailvalid(email)) {
                $("#email").addClass('is-invalid');
                $("#email").removeClass('is-valid');
                return false;
            } else {
                $("#email").addClass('is-valid');
                $("#email").removeClass('is-invalid');
            }
            //
            var input_pass = $("#password").val();
            if (!isPasswordValid(input_pass)) {
                $("#password").addClass('is-invalid');
                $("#password").removeClass('is-valid');
                return false;
            } else {
                $("#password").addClass('is-valid');
                $("#password").removeClass('is-invalid');
            }
            //
            var input_pass = $("#password").val();
            var confirm_pass = $("#confirm-password").val();
            if (!isPassowrdConfirmMatch(input_pass, confirm_pass)) {
                $("#confirm-password").addClass('is-invalid');
                $("#confirm-password").removeClass('is-valid');
                return false;
            } else {
                $("#confirm-password").addClass('is-valid');
                $("#confirm-password").removeClass('is-invalid');
            }
            return true;
        });

        function isEmailvalid(email) {
            var validEmail = email.match(
                /^(([^<>()[\]\\.,;:\s@@\"]+(\.[^<>()[\]\\.,;:\s@@\"]+)*)|(\".+\"))@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/
            );
            return validEmail;
        }
        function isPasswordValid(input_pass) {
            var legnth = input_pass.length;
            var hasCapitalletter = input_pass.toLowerCase() != input_pass;
            var hasSmallLetter = input_pass.toUpperCase() != input_pass;
            var hasDigits = /\d/.test(input_pass);
            if (legnth >= 8 && hasCapitalletter && hasSmallLetter && hasDigits) {
                return true;
            } else {
                return false;
            }
        }
        function isPassowrdConfirmMatch(input_pass, confirm_pass) {
            if (input_pass !== confirm_pass) {
                return false;
            } else {
                return true;
            }
        }

    </script>
}
